 

fn main() {
    // Test 1: Simple lambda expression (single expression, no braces)
    let add_one = |x: int| x + 1;
    println(add_one(5));      // Should print 6
    
    // Test 2: Lambda with function pointer type
    let add: fn(int) -> int = |x: int| { x + 2 };
    println(add(5));           // Should print 7
    
    // Test 3: Lambda with multiple parameters
    let multiply = |x: int, y: int| { x * y };
    println(multiply(3, 4));   // Should print 12
    
    // Test 4: Lambda with no parameters
    let get_five = || { 5 };
    println(get_five());       // Should print 5
    
    // Test 5: Lambda that captures variables (closure)
    let base = 10;
    let add_base = |x: int| { x + base };
    println(add_base(5));      // Should print 15
    
    // Test 6: Direct lambda call
    let result = |x: int| { x * 2 }(7);
    println(result);           // Should print 14
    
    // Test 7: Lambda with type inference (no explicit parameter types)
    let double = |x| x * 2;
    println(double(8));        // Should print 16
}

