{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Malphas",
  "scopeName": "source.malphas",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#types"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#generics"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.malphas",
          "match": "//.*$"
        },
        {
          "name": "comment.block.malphas",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.malphas",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.malphas",
              "match": "\\\\(n|r|t|\\\\|\"|')"
            }
          ]
        },
        {
          "name": "string.quoted.single.malphas",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.malphas",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.malphas",
          "match": "\\b(if|else|match|for|loop|while|break|continue|return|in|case)\\b"
        },
        {
          "name": "keyword.control.import.malphas",
          "match": "\\b(use|mod|package)\\b"
        },
        {
          "name": "keyword.other.malphas",
          "match": "\\b(as|where|unsafe|pub|spawn|select|type|Self)\\b"
        },
        {
          "name": "storage.type.declaration.malphas",
          "match": "\\b(fn|struct|enum|trait|impl|let|mut|const)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.malphas",
          "match": "\\b(int|int8|int32|int64|float|f64|bool|string|void|u8|u16|u32|u64|u128|usize)\\b"
        },
        {
          "name": "storage.type.channel.malphas",
          "match": "\\b(chan|Sender|Receiver)\\b"
        },
        {
          "name": "storage.type.option.malphas",
          "match": "\\b(Option|Result|Some|None|Ok|Err)\\b"
        },
        {
          "name": "entity.name.type.malphas",
          "match": "\\b[A-Z][a-z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.malphas",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.malphas",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.malphas",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.malphas",
          "match": "\\b(null|nil)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.malphas",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.channel.malphas",
          "match": "(<-)"
        },
        {
          "name": "keyword.operator.scope.malphas",
          "match": "(::)"
        },
        {
          "name": "keyword.operator.range.malphas",
          "match": "(\\.\\.)"
        },
        {
          "name": "keyword.operator.optional.malphas",
          "match": "(\\?)"
        },
        {
          "name": "keyword.operator.reference.mut.malphas",
          "match": "(&mut)"
        },
        {
          "name": "keyword.operator.logical.malphas",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.comparison.malphas",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.malphas",
          "match": "(=)"
        },
        {
          "name": "keyword.operator.arithmetic.malphas",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.reference.malphas",
          "match": "(&)"
        },
        {
          "name": "punctuation.separator.malphas",
          "match": "[,;:]"
        }
      ]
    },
    "generics": {
      "patterns": [
        {
          "name": "meta.generic.malphas",
          "begin": "\\b([A-Z][a-zA-Z0-9_]*)\\s*\\[",
          "end": "\\]",
          "beginCaptures": {
            "1": {
              "name": "entity.name.type.malphas"
            }
          },
          "patterns": [
            {
              "include": "#types"
            },
            {
              "name": "punctuation.separator.malphas",
              "match": ","
            }
          ]
        },
        {
          "name": "meta.generic.declaration.malphas",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            {
              "include": "#types"
            },
            {
              "name": "punctuation.separator.malphas",
              "match": ","
            }
          ]
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.malphas",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.constant.malphas",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.malphas",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
